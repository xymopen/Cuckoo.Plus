.notification-card {
  margin: 2px 0;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
  border-radius: 3px;
  cursor: pointer;

  .user-avatar {
    cursor: pointer;
  }

  .user-display-name {
    display: inline;
    cursor: pointer;

    &:hover {
      text-decoration: underline;
    }
  }

  .notification-content {
    cursor: pointer;
  }
}
